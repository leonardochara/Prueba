<html>
		<head>
			<title>Alumnos</title>
			<link rel="stylesheet"
			href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.mi
			n.css"
			integrity="sha384-
			MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO"
			crossorigin="anonymous">
		</head>

		<body>
			<div class="col-md-6 mt-4 card">
				<form action="/editar" method="POST" class="card-body" enctype="multipart/form-data">
						<h3 class="card-title">Editando alumno</h3>
						
						<div class="form-group">
							DNI: <input type="text" name="DNI" class="form-control"
							value='<%= alumno[0].DNI %>'>		
						</div>
						
						<div>
							apeNom: <input type="text" name="apeNom" class="form-control"
							value='<%= alumno[0].apeNom %>'>
						</div>

						<div>
							colegio: <input type="text" name="colegio" class="form-control"
							value='<%= alumno[0].colegio %>'>
						</div>

						<div>
							provincia: <input type="text" name="provincia" class="form-control"
							value='<%= alumno[0].provincia %>'>
						</div>

						<div>
							nota: <input type="text" name="nota" class="form-control"
							value='<%= alumno[0].nota %>'>
						</div>

						<div>
							Editar:
							<img src="/ver?DNI=<%= alumno[0].DNI %>" width="50%">
							<input type="file" name="foto" class="form-control">

						</div>

						<input type="submit" class="btn btn-primary">
				</form>
			</div>
		</body>
</html>
